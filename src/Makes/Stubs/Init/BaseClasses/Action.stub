<?php

namespace {{ namespace }};

use {{ baseContractNamespace }};

abstract class Action
{
  /**
   * Проверяет доступ пользователя к выполнению экшена
   */
  protected function authorize(): void {}

  /**
   * Основной код экшена
   */
  protected abstract function run(): array;

  /**
   * Выполнение экшена
   */
  public function __invoke(): array
  {
    $this->authorize();
    return $this->run();
  }
}
